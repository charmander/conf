[commit]
	cleanup = scissors

[core]
	compression = 9
	editor = vim

[diff]
	tool = vimdiff
	algorithm = minimal
	colorMoved = default

[merge]
	conflictstyle = diff3

[push]
	default = simple

[format]
	pretty = fuller

[log]
	decorate = short
	showSignature = true

[url "https://github.com/"]
	insteadOf = git://github.com/

[alias]
	fetch-pr = "!f() { git fetch $1 pull/$2/head:pull/$2; }; f"
[pull]
	ff = only
[init]
	defaultBranch = main
