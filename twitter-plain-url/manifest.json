{
	"manifest_version": 2,
	"name": "Twitter plain URL",
	"version": "0.1.0",
	"description": "Removes t.co redirect so you can copy links",
	"permissions": [],
	"content_scripts": [
		{
			"matches": ["https://twitter.com/*", "https://mobile.twitter.com/*"],
			"js": ["content.js"]
		}
	],
	"applications": {
		"gecko": {
			"id": "twitter-plain-url@charmander.me"
		}
	}
}
